    <div id="modal-js-example" class="modal">
      <div class="modal-background"></div>

      <div class="modal-content">
        <div class="card">
          <p class="card-header is-size-2 has-text-dark has-background-primary"> List Item Frequency</p>
          <p class="card-content has-text-centered is-size-3">
            Check how often you would like to complete this event. </p>
          <div class="card is-size-3 is-centered has-text-centered" style="border:none;">
          <label class="checkbox">
            <input style='width: 20px; height: 20px' type="checkbox" id="sunday-checkbox" {{#if sunday}}checked="true"{{/if}}>
            <p style='display:inline-flex'></p>Sunday</p>
          </label> 
          <br>
          <label class="checkbox">
            <input style='width: 20px; height: 20px' type="checkbox" id="monday-checkbox" {{#if monday}}checked="true"{{/if}}>
            <p style='display:inline-flex'></p>Monday</p>
          </label> 
          <br>
          <label class="checkbox">
            <input style='width: 20px; height: 20px' type="checkbox" id="tuesday-checkbox" {{#if tuesday}}checked="true"{{/if}}>
            <p style='display:inline-flex'></p>Tuesday</p>
          </label> 
          <br>
          <label class="checkbox">
            <input style='width: 20px; height: 20px' type="checkbox" id="wednesday-checkbox" {{#if wednesday}}checked="true"{{/if}}>
            <p style='display:inline-flex'></p>Wednesday</p>
          </label> 
          <br>
          <label class="checkbox">
            <input style='width: 20px; height: 20px' type="checkbox" id="thursday-checkbox" {{#if thursday}}checked="true"{{/if}}>
            <p style='display:inline-flex'></p>Thursday</p>
          </label> 
          <br>
          <label class="checkbox">
            <input style='width: 20px; height: 20px' type="checkbox" id="friday-checkbox" {{#if friday}}checked="true"{{/if}}>
            <p style='display:inline-flex'></p>Friday</p>
          </label> 
          <br>
          <label class="checkbox">
            <input style='width: 20px; height: 20px' type="checkbox" id="saturday-checkbox" {{#if saturday}}checked="true"{{/if}}>
            <p style='display:inline-flex'></p>Saturday</p>
          </label> 
          <br>
          <button class="button m-2 is-size-4 is-primary" data-id="{{currentNote}}" id="save-todo">Save</button>
        </div>
      </div>
      <button class="modal-close is-large" aria-label="close"></button>
    </div>
    <script src="/js/main.js"></script>
    <script src="/js/modalSettings.js"></script>